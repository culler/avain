#!/bin/bash
SOURCE=Avain
DMG_NAME=$SOURCE.dmg
rm -f $DMG_NAME
create-dmg \
  --volname $SOURCE \
  --volicon Avain.icns \
  --background background.png \
  --window-size 500 400 \
  --icon-size 96 \
  --icon "Avain" 50 150 \
  --app-drop-link 300 150 \
  --format ULFO \
  --no-internet-enable \
  $DMG_NAME $SOURCE
